<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <Button
        android:id="@+id/bt_goto_WBAuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="203dp"
        android:text="Goto WBAuthActivity"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_show_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:layout_marginStart="21dp"
        android:text="Here is Token!"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_goto_WBAuth"
        app:layout_constraintStart_toStartOf="@+id/bt_goto_WBAuth" />

    <Button
        android:id="@+id/bt_copy_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        android:text="Copy Token"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/bt_goto_WBAuth"
        app:layout_constraintTop_toBottomOf="@+id/bt_goto_WBAuth" />

</android.support.constraint.ConstraintLayout>